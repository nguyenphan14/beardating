            android:name="com.phannguyen.datingapp.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.phannguyen.datingapp.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name="com.phannguyen.datingapp.ChooseLoginRegistrationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.phannguyen.datingapp.MainActivity"
            android:exported="false" />
